<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Web Application Created With eXo IDE</display-name>
  
  
  <servlet>
    <servlet-name>chatDemo</servlet-name>
    <servlet-class>org.nagazumi.demo.ChatDemoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>chatDemo</servlet-name>
    <url-pattern>/chatDemo</url-pattern>
  </servlet-mapping>
  
  <resource-ref>
    <res-ref-name>jdbc/naga-demo</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  
</web-app>
